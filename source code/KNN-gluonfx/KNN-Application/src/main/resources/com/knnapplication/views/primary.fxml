<?xml version="1.0" encoding="UTF-8"?>

<?import com.gluonhq.charm.glisten.control.Icon?>
<?import com.gluonhq.charm.glisten.mvc.View?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<View fx:id="primary" stylesheets="@primary.css" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.knnapplication.views.PrimaryPresenter">
   <center>

      <VBox fx:id="_input_section" alignment="CENTER" prefWidth="350.0" spacing="15.0" BorderPane.alignment="CENTER">
         <children>
            <Button mnemonicParsing="false" onAction="#LoadFile" text="Load from file">
               <graphic>
                  <Icon content="FILE_UPLOAD" />
               </graphic>
            </Button>
            <Button mnemonicParsing="false" onAction="#LoadBinary" text="Load from binary file">
               <graphic>
                  <Icon content="FILE_UPLOAD" />
               </graphic>
            </Button>
            <Button mnemonicParsing="false" onAction="#LoadDB" text="Load from Database">
               <graphic>
                  <Icon content="FILE_UPLOAD" />
               </graphic>
            </Button>
         </children>
      </VBox>
   </center>
   <top>
      <Label fx:id="label" alignment="CENTER" prefHeight="308.0" prefWidth="753.0" text="Benvenuto in KNN!" textAlignment="CENTER" BorderPane.alignment="CENTER">
         <font>
            <Font name="Consolas" size="12.0" />
         </font>
      </Label>
   </top>
</View>
